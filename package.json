{
    "name": "youtube-video-downloader",
    "version": "1.1.0",
    "main": "main.js",
    "description": "A tool for downloading YouTube videos. 5 videos at a time. Right on your Desktop app.",
    "author": "SnapDrift",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder --win portable"
    },
    "devDependencies": {
        "electron": "^40.1.0",
        "electron-builder": "^26.6.0"
    },
    "build": {
        "appId": "com.salimsood.ytvideodownloader",
        "productName": "SnapDrift YT-Vid Downloader",
        "asar": true,
        "files": [
            "**/*",
            "!bin${/*}",
            "!releases${/*}",
            "!.git${/*}",
            "!*.md"
        ],
        "extraResources": [
            {
                "from": "bin/yt-dlp.exe",
                "to": "yt-dlp.exe"
            },
            {
                "from": "bin/ffmpeg.exe",
                "to": "ffmpeg.exe"
            }
        ],
        "directories": {
            "buildResources": "build",
            "output": "releases"
        },
        "win": {
            "compression": "maximum",
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico"
        },
        "electronLanguages": [
            "en-US"
        ]
    }
}